        nuevo.linea = (s.left+1);
        nuevo.columna=(s.right);
        Errores.add(nuevo);
        errores=true;*/
    }
	 public ArrayList<NodoError> errores = new ArrayList();
	  public ArrayList<NodoObjeto> datos = new ArrayList();
